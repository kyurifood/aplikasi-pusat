            android:layout_height="wrap_content"
            android:text=":"
            android:layout_weight="1.9"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/tanggal_pesan"
                android:layout_weight="1"/>
        </LinearLayout>

    <LinearLayout
