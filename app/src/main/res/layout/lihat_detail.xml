                android:id="@+id/textView131" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=":"
                android:id="@+id/textView141" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
