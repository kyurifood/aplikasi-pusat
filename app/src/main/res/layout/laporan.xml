<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:textSize="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Laporan"
        android:id="@+id/textView"
        android:layout_weight="0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Laporan transaksi per produk"
        android:id="@+id/btn_produk"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Laporan transaksi per marketer"
        android:id="@+id/btn_marketer"
        android:layout_weight="0"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Laporan transaksi per distributor"
        android:id="@+id/btn_distributor"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0" />
</LinearLayout>